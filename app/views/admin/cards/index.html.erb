<div class="span2"></div>
<div class="span8">
	<div class="row-fluid">
		<h1>Cards</h1>
		<%= link_to "Back", admin_home_path, :class=>"btn btn-inverse" %>
		<%= link_to "Create Card", new_admin_card_path, :class=>"btn btn-inverse" %>
		<%= link_to "Factions", admin_factions_path, :class=>"btn btn-inverse" %>
		<%= link_to "Types", admin_types_path, :class=>"btn btn-inverse" %>
	</div>
	<div class="row-fluid">
		<table id="server-table" class="table table-condensed span12">
			<tr>
				<th></th>
				<th></th>
			</tr>
			<% @cards.each do |card| %>
				<tr>
					<td>
						<h3><%= card.name %></h3>
						<%= image_tag card.avatar, :class => "span2" %>
					</td>
					<td>
						<div class="input-append">
							<div class="btn-group">
								<button class="btn dropdown-toggle btn-inverse" data-toggle="dropdown">
									Action
									<span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
									<li><%= link_to "Show", admin_card_path(card.id)%></li>
									<li><%= link_to "Edit", edit_admin_card_path(card.id)%></li>
									<li><%= link_to 'Destroy', admin_card_path(card.id), confirm: 'Are you sure?', :method => :delete %></li>
								</ul>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
<div class="span2"></div>

