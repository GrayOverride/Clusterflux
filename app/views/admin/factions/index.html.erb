<div class="span2"></div>
<div class="span8">	
	<h1>Factions</h1>
	<%= link_to "Create Faction", new_admin_faction_path, :class=>"btn btn-inverse" %>
	<table id="server-table" class="table table-striped table-hover table-condensed row-fluid">
		<th>Name</th>
		<th>Number of cards</th>
		<th></th>
		<% @factions.each do |faction| %>
			<tr>
				<td><%= faction.name %></td>
				<td><%= faction.cards.count %></td>
				<td>
					<div class="input-append pull-right">
						<div class="btn-group">
							<button class="btn dropdown-toggle btn-inverse" data-toggle="dropdown">
								Action
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu">
								<li><%= link_to "Edit", edit_admin_faction_path(faction.id)%></li>
								<li><%= link_to 'Destroy', admin_faction_path(faction.id), confirm: 'Are you sure?', :method => :delete %></li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
		<% end %>
	</table>
	<%= link_to "Back", admin_home_path, :class=>"btn btn-inverse"  %>
</div>
<div class="span2"></div>