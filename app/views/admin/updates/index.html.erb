<div class="span2"></div>
<div class="span8">  
  <div class="row-fluid">
    <h1>Site News</h1>
    <%= link_to 'New Update', new_admin_update_path, :class=>"btn btn-inverse" %>
  </div>

  <div class="row-fluid">
    <table id="server-table" class="table table-striped table-hover table-condensed row-fluid">
      <th>Title</th>
      <th></th>
        <% @admin_updates.each do |admin_update| %>
          <tr>
            <td><%= admin_update.title %></td>
            <td>
                <div class="input-append pull-right">
                  <div class="btn-group">
                    <button class="btn dropdown-toggle btn-inverse" data-toggle="dropdown">
                      Action
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Show', admin_update %></li>
                      <li><%= link_to "Edit", edit_admin_update_path(admin_update)%></li>
                      <li><%= link_to 'Destroy', admin_update_path(admin_update.id), method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    </ul>
                  </div>
                </div>
              </td>
          </tr>
        <% end %>
    </table>
  </div>
</div>
<div class="span2"></div>


