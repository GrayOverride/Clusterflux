<div class="span2"></div>
<div class="span8">
	<div class="row-fluid">
		<h1>Effects</h1>
		<%= link_to "Create Effect", new_admin_effect_path, :class=>"btn btn-inverse"%>
		<%= link_to "Back", admin_home_path, :class=>"btn btn-inverse"%>
	</div>
	<div class="row-fluid">
		<table id="server-table" class="table table-striped table-hover table-condensed row-fluid">
			<tr>
				<th>Name</th>
				<th>Type</th>
				<th>Effect</th>
				<th>Amount</th>
				<th></th>
			</tr>
			<% @effects.each do |effect| %>
			<tr>
				<td><%= effect.name %></td>
				<td><%= effect.etype %></td>
				<td><%= effect.effect %></td>
				<td><%= effect.amount %></td>
				<td>
					<div class="input-append pull-right">
						<div class="btn-group">
							<button class="btn dropdown-toggle btn-inverse" data-toggle="dropdown">
								Action
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu">
								<li><%= link_to "Edit", edit_admin_effect_path(effect.id)%></li>
								<li><%= link_to 'Destroy', admin_effect_path(effect.id), confirm: 'Are you sure?', :method => :delete %></li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<div class="span2"></div>